<div class="card mt-4">
    <div class="card-header">
        <h5>{{post.title}}</h5>
        <small class="text-muted">Created by {{post.user.name}} on {{format_date post.date_created}}</small>
    </div>
    <div class="card-body">
        <p class="card-text">{{post.content}}</p>
    </div>
</div>

{{#each comments as |comment|}}
<div class="card mt-4">
    <div class="card-header">
        <small class="text-muted">Commented by {{comment.user.name}} on {{format_date comment.date_created}}</small>
    </div>
    <div class="card-body">
      <p class="card-text">{{comment.content}}</p>
    </div>
</div>
{{/each}}

<div class="card mt-4">
    <div class="card-body">
        <form class="post-form" data-id="{{post.id}}">
            <div class="form-group">
                <label for="content">Leave a comment:</label>
                <textarea name="content" id="content" rows="3" class="form-control"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

<script src="/js/comment.js"></script>
